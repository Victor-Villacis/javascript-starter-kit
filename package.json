{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript Development Environment",
  "scripts": {
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "npm-run-all --parallel open:src lint:watch test:watch start-mock-apiserver",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint:watch": "npm run lint -- --watch",
    "lint": "esw webpack.config.* src buildScripts --color",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node buildScripts/generateMockData.js",
    "prestart-mock-apiserver": "npm run generate-mock-data",
    "start-mock-apiserver": "json-server --watch src/api/db.json --port 8081",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "start-browser-sync-server": "browser-sync start --server 'src' --files 'src/*' --watch ",
    "browser-sync-proxy-server": "browser-sync start --proxy 'localhost:8080' --files 'src/*' --ws --tunnel --logLevel='debug'",
    "share-running-app": "lt --port 8080 --subdomain ibx-victor-app",
    "start-app-with-tunnel": "npm-run-all --parallel start share",
    "deploy": "surge ./dist/ ibx-victor-app.surge.sh"
  },
  "author": "Victor Villacis",
  "license": "MIT",
  "dependencies": {
    "update": "^0.7.4",
    "whatwg-fetch": "3.6.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "7.17.7",
    "@babel/node": "^7.13.0",
    "@babel/preset-env": "7.16.11",
    "@babel/register": "7.17.7",
    "babel-loader": "8.2.3",
    "browser-sync": "^2.27.7",
    "chai": "4.3.6",
    "chalk": "4.1.0",
    "cheerio": "^1.0.0-rc.10",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "eslint": "8.11.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-watch": "8.0.0",
    "express": "4.17.3",
    "faker": "^5.5.3",
    "html-webpack-plugin": "^5.2.0",
    "jsdom": "^19.0.0",
    "json-schema-faker": "0.5.0-rcv.27",
    "json-server": "0.17.0",
    "localtunnel": "^2.0.2",
    "mini-css-extract-plugin": "^2.6.0",
    "mocha": "^9.2.0",
    "npm-run-all": "4.1.5",
    "numeral": "2.0.6",
    "open": "8.4.0",
    "rimraf": "3.0.2",
    "style-loader": "3.3.1",
    "surge": "^0.23.1",
    "webpack": "5.70.0",
    "webpack-dev-middleware": "5.3.1"
  }
}
